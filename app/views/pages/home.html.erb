<% if signed_in? %>
  <table class="front" summary="For signed-in users">
    <tr>
      <td class="main">
        <h1 class="dailypost">Are you ready to fly with Kurbi today?</h1>
        <%= render 'shared/dailypost_form' %>
      </td>
      <td class="sidebar round">
        <%= render 'shared/user_info' %>
      </td>
    </tr>
  </table>
<% else %>

<h1>Welcome to Kurbi!</h1>
<p>Kurbi is a web application designed to help people living with MS.</p>

<%= link_to "Sign up now!", signup_path, :class => "signup_button round" %>
<% end %>