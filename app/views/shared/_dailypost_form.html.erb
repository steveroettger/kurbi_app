<%= simple_form_for @dailypost do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
  	<%= f.label "how are you feeling?" %><br />
    <%= f.input :general %>
  </div>
  
  <div class="field">
  	<%= f.label "are you experiencing any stress?" %><br />
    <%= f.input :stress %>
  </div>
  
  <div class="field">
  	<%= f.label "are you experiencing any fatigue?" %><br />
    <%= f.input :fatigue %>
  </div>
  
  <div class="field">
  	<%= f.label "Add Note" %><br />
    <%= f.text_area :general_note %>
  </div>
  
  
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>