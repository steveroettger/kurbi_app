<%= form_for(@profile) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>

  <div class="field">
    <%= f.label :location, "Where are you currently located?" %><br />
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label :birthday, "What is your birthday?" %><br />
    <%= f.date_select :birthday %>
  </div>
  <div class="field">
    <%= f.label :diagnosed, "What year were you diagnosed?" %><br />
    <%= f.text_field :diagnosed %>
  </div>
  <div class="field">
    <%= f.label :medications, "What medications are your currently taking?" %><br />
    <%= f.text_area :medications %>
  </div>
  <div class="field">
    <%= f.label :bio, "Tell us a little bit about yourself:" %><br />
    <%= f.text_area :bio %>
  </div>
  <div class="actions">
    <%= f.submit, :class => "button round" %>
  </div>
<% end %>
